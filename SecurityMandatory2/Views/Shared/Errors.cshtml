@model IEnumerable<string>
@{
    ViewBag.Title = "Errors";
}

<h2>Errors</h2>
<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Something went wrong please try again
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: The following errors were encountered
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("OK", "Index", "Home", null, new { @class = "btn btn-default"})

